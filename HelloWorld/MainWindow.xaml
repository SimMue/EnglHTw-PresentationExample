<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="Greeting_Label" Content="Hello World!" HorizontalAlignment="Left" Margin="100,101,0,0" VerticalAlignment="Top" Height="51" Width="250" FontSize="36"/>
        <TextBox x:Name="Name_Input" HorizontalAlignment="Left" Height="23" Margin="217,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="86"/>
        <Label Content="What's your name?" HorizontalAlignment="Left" Margin="100,169,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Submit_Button" Content="Submit" HorizontalAlignment="Left" Margin="322,172,0,0" VerticalAlignment="Top" Width="75" Click="submit_button_Click"/>

    </Grid>
</Window>
